<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/va_bt_show_1"
            style="@style/public_button_normal"
            android:text="1.使用ImageView显示图片" />

        <ImageView
            android:layout_margin="@dimen/public_space_small"
            android:layout_gravity="center"
            android:id="@+id/va_iv_show_1"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/va_bt_show_3"
            style="@style/public_button_normal"
            android:text="3.使用SurfaceView显示图片" />

        <SurfaceView
            android:id="@+id/va_sv_show"
            android:layout_margin="@dimen/public_space_small"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="200dp" />

    </LinearLayout>
</ScrollView>