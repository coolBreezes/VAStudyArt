<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/va_tl_tag_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="@dimen/public_space_small"
        app:tabIndicatorColor="@color/golden"
        app:tabSelectedTextColor="@color/golden"
        app:tabTextColor="@color/public_text_hint" />

    <android.support.v4.view.ViewPager
        android:id="@+id/va_vp_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>